# Maintainer: Marat Akhin <Marat.Akhin@gmail.com>

pkgname=mathsat-5
pkgver=5.2.10
pkgrel=1
pkgdesc="MathSAT 5 is an efficient SMT solver supporting a wide range of theories and functionalities"
arch=('x86' 'x86_64')
url="http://mathsat.fbk.eu/"
license=('GPL' 'LGPL' 'custom')
source=("$pkgname-$pkgver.tar.gz::http://mathsat.fbk.eu/download.php?file=mathsat-$pkgver-linux-$CARCH.tar.gz")
md5sums=('124503e736ebb0240606fd370d6c5651')

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/include/mathsat"
  mkdir -p "$pkgdir/usr/lib"

  cp -r "$srcdir/mathsat-$pkgver-linux-$CARCH/bin/." "$pkgdir/usr/bin/"
  cp -r "$srcdir/mathsat-$pkgver-linux-$CARCH/include/." "$pkgdir/usr/include/mathsat/"
  cp -r "$srcdir/mathsat-$pkgver-linux-$CARCH/lib/." "$pkgdir/usr/lib/"

  install -Dm644 "$srcdir/mathsat-$pkgver-linux-$CARCH/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
