pkgname=libantlr3-cpp
pkgver=3.5
pkgrel=2
pkgdesc="C++ target for ANTLR 3"
url="http://www.antlr3.org/"
arch=("i686" "x86_64")
license=("BSD")
depends=('java-antlr3')
source=("$pkgname-$pkgver.tar.gz::http://www.antlr.org/wiki/download/attachments/29130826/Cpp.tar.gz?version=1&modificationDate=1347930054013")
md5sums=('d4d7c8418efe60fd1c48755dd40f97c6')

build() {
  mkdir -p "${pkgdir}/usr/include"
  cp -r "${srcdir}/Cpp/include" "${pkgdir}/usr"
}
